<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="48dp"
    android:paddingRight="48dp"
    android:paddingTop="96dp"
    android:gravity="center_horizontal"
    android:background="@drawable/login_bg">
    <ImageView
        android:id="@+id/titleLogin"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_title01"/>
    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/titleLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:text="이메일 주소로 로그인해주세요"
        android:textColor="#ACB0BB" />

    <EditText
        android:id="@+id/editTextUserId"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/label"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_bill_text_partner"
        android:textSize="18sp"
        android:hint="@string/activity_login_id"
        />

    <View
        android:layout_width="350dp"
        android:layout_height="1px"
        android:layout_below="@id/editTextUserId"
        android:layout_centerHorizontal="true"
        android:textColor="#ACB0BB"/>


    <EditText
        android:id="@+id/editTextUserPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/editTextUserId"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_bill_text_partner"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:hint="@string/activity_login_password"/>

    <View
        android:layout_width="350dp"
        android:layout_height="1px"
        android:layout_centerHorizontal="true"
        android:textColor="#ACB0BB"/>


    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_below="@id/editTextUserPassword"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:background="@drawable/login_btn"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="로그인"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:gravity="center"
        android:background="@null"
        android:textSize="14sp"
        android:textColor="#75787F"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="DOTOOM 회원가입 >"/>

</RelativeLayout>