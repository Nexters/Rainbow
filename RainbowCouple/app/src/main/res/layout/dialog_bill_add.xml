            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="0.3"-->
            <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
            <!--android:textColor="@color/color_bill_text_partner"-->
            <!--android:hint=""-->
            <!--android:gravity="left|center_vertical"/>-->

        <!--<EditText-->
            <!--android:id="@+id/textViewPartnerBillComment"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="0.3"-->
            <!--android:hint="적절한 내용의 코멘트를 입력 해 주세요."-->
            <!--android:textColor="@color/color_bill_text_default"-->
            <!--android:gravity="left|center_vertical"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:weightSum="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBillCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="3dp"
                android:text="@string/dialog_Cancel"
                android:background="@color/color_bill_background"/>

            <Button
                android:id="@+id/btnBillSave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="3dp"
                android:text="@string/dialog_Save"
                android:background="@color/color_bill_background_tint"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>