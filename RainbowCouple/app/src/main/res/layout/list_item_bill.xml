<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutMyBill"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:weightSum="1"
        android:orientation="vertical"
        android:background="@color/color_bill_background_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMyBillDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="2010.00.00"
                android:textColor="@color/color_bill_date"
                android:gravity="top|left|center_vertical"/>

            <TextView
                android:id="@+id/textViewMyBillAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="W 3,000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_bill_text_my"
                android:gravity="right|center_vertical"
                android:maxLines="1"/>


        </LinearLayout>


        <TextView
            android:id="@+id/textViewMyBillComment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:text="적절한 내용의 코멘트가 들어갑니다.\n 텍스트는 2줄만 작성됩니다."
            android:textColor="@color/color_bill_text_default"
            android:gravity="right|center_vertical"
            android:maxLines="2"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutPartnerBill"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:weightSum="1"
        android:orientation="vertical"
        android:background="@color/color_bill_background_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPartnerBillAmount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="W 3,000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_bill_text_partner"
                android:gravity="left|center_vertical"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textViewPartnerBillDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="2010.00.00"
                android:textColor="@color/color_bill_date"
                android:gravity="top|right|center_vertical"/>

        </LinearLayout>


        <TextView
            android:id="@+id/textViewPartnerBillComment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:text="적절한 내용의 코멘트가 들어갑니다.\n 텍스트는 2줄만 작성됩니다."
            android:textColor="@color/color_bill_text_default"
            android:gravity="left|center_vertical"
            android:maxLines="2"/>

    </LinearLayout>

</LinearLayout>