<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="@color/color_bill_background_white">
    <TextView
        android:id="@+id/tvOwner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="M"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:background="@drawable/ico_drink01"/>
    <ImageView
        android:id="@+id/ivCategory"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_toRightOf="@id/tvOwner"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ico_drink02"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivCategory"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/textViewBillCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:text="음료"/>
        <TextView
            android:id="@+id/textViewBillComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewBillCategory"
            android:textSize="16sp"
            android:lines="1"
            android:maxLength="12"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:text="이디야 아메리카노"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/textViewBillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="3,300"
        android:textSize="20sp"/>
</RelativeLayout>